<div class="moviePage">
  <div class="reviews">
    <h2>User Reviews</h2>
    <div id="reviewsDiv"></div>
    {{!-- Review form start --}}
    <div class="postReview">
      <h3 id="reviewTitle">Post your own review</h3>
      <form
        id="reviewForm"
        autocomplete="off"
        onsubmit="document.querySelector('#reviewForm').reset()"
      >
        <textarea name="comment" placeholder="Comment"></textarea>
        <input type="hidden" name="movie" value="{{movie.id}}" />
        <label for="rating">Rating</label>
        <div>
          <select id="styled" name="rating" required>
            <option value="">0</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
          </select>
          <input
            type="text"
            name="name"
            placeholder="Your Name"
            value="{{savedName}}"
            required
          />
        </div>
        <input type="submit" />
      </form>
    </div>
    {{!-- Review form end --}}
  </div>
  <div class="movieMeta">
    <h1>{{movie.title}}</h1>
    {{{markdown movie.intro}}}
    <div class="ratings">
      <h2 id="ratingTitle">Rating</h2>
      <div id="rating"></div>
    </div>
  </div>
  <img src="{{movie.image.url}}" alt="" />
</div>

<script src="/reviews_post.js"></script>
<script src="/../screening.js"></script>
<script src="/reviews.js"></script>
<script src="/../movie.js"></script>